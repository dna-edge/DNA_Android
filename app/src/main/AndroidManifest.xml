<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.konkuk.dna">
    <!--반드시 추가--><uses-permission android:name="android.permission.INTERNET" />
    <!--위치정보활용시 추가--><uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!--위치정보활용시 추가--><uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!--WIFI 상태활용시 추가--><uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--WIFI 상태활용시 추가--><uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dna"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dna"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.konkuk.dna.SplashActivity">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity android:name="com.konkuk.dna.auth.LoginActivity" />
        <activity android:name="com.konkuk.dna.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.konkuk.dna.chat.ChatActivity">
        </activity>

        <activity android:name="com.konkuk.dna.dm.RoomActivity">
        </activity>
        <activity android:name="com.konkuk.dna.dm.DMActivity">
        </activity>

        <activity
            android:name="com.konkuk.dna.auth.ActivityMissPW"
            android:parentActivityName="com.konkuk.dna.auth.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.konkuk.dna.auth.LoginActivity" />
        </activity>

        <activity
            android:name="com.konkuk.dna.auth.SignupAgreeActivity"
            android:parentActivityName="com.konkuk.dna.chat.ChatActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.konkuk.dna.auth.LoginActivity" />
        </activity>

        <activity
            android:name="com.konkuk.dna.auth.SignupFormActivity"
            android:parentActivityName="com.konkuk.dna.auth.SignupAgreeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.konkuk.dna.auth.SignupAgreeActivity" />
        </activity>
    </application>
</manifest>