<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.konkuk.dna.dearneighboranyone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dna"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dna"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ActivityLogo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityLogin" />
        <activity android:name=".ActivityChat" />

        <activity
            android:name=".ActivityMissPW"
            android:parentActivityName=".ActivityLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.konkuk.dna.dearneighboranyone.ActivityLogin" />
        </activity>

        <activity
            android:name=".ActivitySignup1"
            android:parentActivityName=".ActivityLogin">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.konkuk.dna.dearneighboranyone.ActivityLogin" />
        </activity>

        <activity
            android:name=".ActivitySignup2"
            android:parentActivityName=".ActivitySignup1">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.konkuk.dna.dearneighboranyone.ActivitySignup1" />
        </activity>
    </application>

</manifest>