<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@drawable/back"
                android:src="@drawable/back"
                android:layout_marginLeft="15dp"
                android:onClick="onClick" />

            <ImageButton
                android:id="@+id/msgFindBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@drawable/find"
                android:src="@drawable/find"
                android:layout_marginRight="65dp"
                android:layout_alignParentRight="true"
                android:onClick="onClick" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="22dp"
                android:background="@color/colorPrimaryLight"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true" />

            <ImageButton
                android:id="@+id/menuBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@drawable/menu"
                android:src="@drawable/menu"
                android:layout_marginTop="1dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:onClick="onClick" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/chatMapFragment"
                android:name="com.konkuk.dna.chat.ChatMapFragment"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/shadow_view">
            </View>

            <ListView
                android:id="@+id/msgListView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@android:color/transparent"
                android:dividerHeight="5dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/layout_border_horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/msgSpeakerBtn"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:textSize="22dp"
                    android:textColor="@color/grayLight"
                    android:background="@drawable/transparent"
                    android:text="@string/fa_speaker"
                    android:tag="fas"
                    android:layout_marginLeft="10dp"
                    android:onClick="onClick" />

                <EditText
                    android:id="@+id/msgEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="120dp"
                    android:paddingLeft="3dp"
                    android:textColor="@color/grayDarker"
                    android:textSize="17dp"
                    android:hint="메시지 입력 ..."
                    android:theme="@style/chatEditTextTheme" />

                <Button
                    android:id="@+id/msgLocationBtn"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:textSize="22dp"
                    android:textColor="@color/grayLight"
                    android:background="@drawable/transparent"
                    android:text="@string/fa_compass"
                    android:tag="far"
                    android:layout_marginRight="90dp"
                    android:layout_alignParentRight="true"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/msgImageBtn"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:textSize="22dp"
                    android:textColor="@color/grayLight"
                    android:background="@drawable/transparent"
                    android:text="@string/fa_image"
                    android:tag="far"
                    android:layout_marginRight="55dp"
                    android:layout_alignParentRight="true"
                    android:onClick="onClick" />

                <Button
                    android:id="@+id/msgSendBtn"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textColor="@color/gray"
                    android:background="@color/grayLighter"
                    android:text="@string/fa_send"
                    android:tag="fas"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:onClick="onClick" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/right_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:choiceMode="singleChoice"
        layout="@layout/layout_drawer" />
</android.support.v4.widget.DrawerLayout>
