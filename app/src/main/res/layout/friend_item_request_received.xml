<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="7dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/reqAvatar"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:src="@drawable/avatar" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reqNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textSize="16dp"
                    android:textColor="@color/grayDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 님이 요청을 보냈습니다"
                    android:textSize="16dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/grayText" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/reqDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayText"
                android:textSize="14dp"
                android:ellipsize="end" />

            <ImageButton
                android:id="@+id/acceptBtn"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_marginRight="33dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:background="@drawable/layout_border_rounded"
                android:src="@drawable/accept_friend"
                android:onClick="onClick" />

            <ImageButton
                android:id="@+id/denyBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:background="@drawable/layout_border_rounded"
                android:src="@drawable/x_friend"
                android:onClick="onClick" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>