<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="7dp"
        android:elevation="12dp"
        app:cardCornerRadius="16dp">
        <ImageView
            android:id="@+id/ccuAvatar"
            android:layout_height="32dp"
            android:layout_width="match_parent"
            android:src="@drawable/avatar">
        </ImageView>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/ccuStatus"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:gravity="bottom"
        android:text="@string/fa_circle"
        android:textSize="15dp"
        android:paddingBottom="7dp"
        android:layout_marginLeft="25dp"
        android:tag="fas"/>

    <TextView
        android:id="@+id/ccuNickname"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="90dp"
        android:textSize="15dp"
        android:textColor="@color/grayDarker" />

    <LinearLayout
        android:id="@+id/infoWraper"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/ccuCaret"
            android:text="@string/fa_caret_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryLighter" />

        <TextView
            android:id="@+id/ccuInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textSize="13dp"
            android:textColor="@color/grayDark"
            android:background="@drawable/layout_chat_user_info" />
    </LinearLayout>

</RelativeLayout>