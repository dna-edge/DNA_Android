<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@drawable/back"
                android:src="@drawable/back"
                android:layout_marginLeft="15dp"
                android:onClick="onClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="125dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="포스팅"
                android:tag="nseb"/>

            <ImageButton
                android:id="@+id/menuBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@drawable/menu"
                android:src="@drawable/menu"
                android:layout_marginTop="1dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:onClick="onClick" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginBottom="50dp">

                <ScrollView
                    android:id="@+id/postScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <android.support.v7.widget.CardView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:elevation="12dp"
                                    android:layout_marginRight="7dp"
                                    app:cardCornerRadius="20dp">
                                    <ImageView
                                        android:id="@+id/postAvatar"
                                        android:layout_height="45dp"
                                        android:layout_width="match_parent"
                                        android:src="@drawable/avatar">
                                    </ImageView>
                                </android.support.v7.widget.CardView>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_marginLeft="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/postNickname"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/black"
                                            android:textSize="18dp"
                                            android:tag="nsb" />

                                        <TextView
                                            android:id="@+id/postDate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="3dp"
                                            android:textColor="@color/grayDarker"
                                            android:textSize="14dp" />
                                    </LinearLayout>

                                    <ImageButton
                                        android:id="@+id/addFriendBtn"
                                        android:layout_width="40dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:padding="0dp"
                                        android:scaleType="fitXY"
                                        android:background="@drawable/button_rounded"
                                        android:src="@drawable/add_friend"
                                        android:onClick="onClick" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/postTitle"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/grayDark"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/silver" />

                            <TextView
                                android:id="@+id/postContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:textSize="17dp"
                                android:lineSpacingMultiplier="1.15"
                                android:singleLine = "false"
                                android:gravity="top" />

                            <!--<View-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="1dp"-->
                                <!--android:layout_marginTop="5dp"-->
                                <!--android:layout_marginBottom="10dp"-->
                                <!--android:background="@color/grayLight" />-->



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/layout_border_all">

                                <fragment
                                    android:id="@+id/mapFragment"
                                    android:name="com.konkuk.dna.post.PostFormMapFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"/>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="45dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/pin"
                                    android:layout_centerHorizontal="true"/>
                            </RelativeLayout>

                            <!--<View-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="1dp"-->
                                <!--android:layout_marginTop="5dp"-->
                                <!--android:layout_marginBottom="5dp"-->
                                <!--android:background="@color/grayLight" />-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="right">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/grayText"
                                    android:textSize="15dp"
                                    android:text="좋아요 " />

                                <TextView
                                    android:id="@+id/postLikeCnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/grayText"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/grayText"
                                    android:textSize="15dp"
                                    android:text="댓글 " />

                                <TextView
                                    android:id="@+id/postCommentCnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/grayText"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/grayText"
                                    android:textSize="15dp"
                                    android:text="스크랩 " />

                                <TextView
                                    android:id="@+id/postScrapCnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/grayText"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/silver" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:id="@+id/postLikeBtn"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:onClick="onClick">

                                    <TextView
                                        android:id="@+id/postLikeBtnIcon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="7dp"
                                        android:textColor="@color/concrete"
                                        android:textSize="17dp"
                                        android:text="@string/fa_like"
                                        android:tag="fas"/>

                                    <TextView
                                        android:id="@+id/postLikeBtnText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/concrete"
                                        android:textSize="15dp"
                                        android:text="좋아요"
                                        android:tag="nsb"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/postCommentBtn"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:onClick="onClick">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="7dp"
                                        android:textColor="@color/concrete"
                                        android:textSize="17dp"
                                        android:text="@string/fa_chat"
                                        android:tag="fas"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/concrete"
                                        android:textSize="15dp"
                                        android:text="댓글쓰기"
                                        android:tag="nsb"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/postScrapBtn"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:onClick="onClick">

                                    <TextView
                                        android:id="@+id/postScrapBtnIcon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="7dp"
                                        android:textColor="@color/concrete"
                                        android:textSize="17dp"
                                        android:text="@string/fa_scrap"
                                        android:tag="fas"/>

                                    <TextView
                                        android:id="@+id/postScrapBtnText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/concrete"
                                        android:textSize="15dp"
                                        android:text="스크랩"
                                        android:tag="nsb"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/silver" />

                        <ListView
                            android:id="@+id/commentList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:background="@color/silver" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true">

                <EditText
                    android:id="@+id/commentEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="45dp"
                    android:paddingLeft="3dp"
                    android:textColor="@color/grayDarker"
                    android:textSize="17dp"
                    android:hint="댓글 입력 ..."
                    android:theme="@style/chatEditTextTheme" />

                <Button
                    android:id="@+id/commentSaveBtn"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textColor="@color/concrete"
                    android:background="@drawable/transparent"
                    android:text="@string/fa_send"
                    android:tag="fas"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:onClick="onClick" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/right_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:choiceMode="singleChoice"
        layout="@layout/layout_drawer" />

</android.support.v4.widget.DrawerLayout>